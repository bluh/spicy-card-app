<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:configChanges="orientation"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="steelhacks.joe.trevor.vdeck.MainGame"
    android:background="#095807"
    android:onClick="shrugClick">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="63">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/otherPiles"
            android:weightSum="3"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageView2"
                android:layout_gravity="center_vertical"
                android:src="@drawable/card"
                android:cropToPadding="false"
                android:focusable="false"
                android:adjustViewBounds="true"
                android:baselineAlignBottom="false"
                android:contextClickable="false"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageView10"
                android:src="@drawable/nocard"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageView3"
                android:src="@drawable/nocard"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="30"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gamePiles"
            android:layout_weight="1"
            android:weightSum="3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageView4"
                android:layout_gravity="center_vertical"
                android:src="@drawable/card"
                android:cropToPadding="false"
                android:focusable="false"
                android:adjustViewBounds="true"
                android:baselineAlignBottom="false"
                android:contextClickable="false"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageView9"
                android:src="@drawable/nocard"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageView6"
                android:src="@drawable/nocard"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="30"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/playerPiles"
            android:layout_weight="1"
            android:weightSum="3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageView5"
                android:layout_gravity="center_vertical"
                android:src="@drawable/card"
                android:cropToPadding="false"
                android:focusable="false"
                android:adjustViewBounds="true"
                android:baselineAlignBottom="false"
                android:contextClickable="false"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageView8"
                android:layout_weight="1"
                android:src="@drawable/card"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageView7"
                android:src="@drawable/nocard"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
